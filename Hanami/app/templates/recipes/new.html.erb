<h1 class="mt-1">Добавить рецепт</h1>

<form action="/recipes" method="POST" class="flex flex-col mt-1" style="gap: .5rem;">
  <label for="title">Название:</label>
  <div class="input">
    <input type="text" id="title" name="title" required>
  </div>

  <label for="title">Сслыка на изображение:</label>
  <div class="input">
    <input type="text" id="image_url" name="image_url" required>
  </div>

  <label for="category">Категория:</label>
  <select id="category" name="category_id" required>
    <% categories.each do |category| %>
      <option value="<%= category[:id] %>"><%= category[:name] %></option>
    <% end %>
  </select>

  <label for="ingredients">Ингредиенты:</label>
  <div class="input">
    <textarea id="ingredients" name="ingredients" required></textarea>
  </div>

  <label for="instructions">Инструкция:</label>
  <div class="input">
    <textarea id="instructions" name="instructions" required></textarea>
  </div>

  <label for="preparation_time">Время приготовления (в минутах):</label>
  <div class="input">
    <input type="number" id="preparation_time" name="preparation_time" required>
  </div>

  <label for="difficulty">Сложность:</label>
  <select id="difficulty" name="difficulty" required>
    <option value="Легкий">Легкий</option>
    <option value="Средний">Средний</option>
    <option value="Сложный">Сложный</option>
  </select>

  <button type="submit">Добавить</button>
</form>