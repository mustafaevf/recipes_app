<!-- views/index.erb -->
<h1>Все рецепты</h1>

<a href="/recipes/new">Добавить новый рецепт</a>

<ul>
  <% @recipes.each do |recipe| %>
    <li>
      <h2><%= recipe.title %></h2>
      <p><%= recipe.ingredients %></p>
      <p><%= recipe.difficulty %></p>
      <a href="/recipes/<%= recipe.id %>">Подробнее</a>
      <a href="/recipes/<%= recipe.id %>/edit">Редактировать</a> <!-- Кнопка редактирования -->
    </li>
  <% end %>
</ul>
